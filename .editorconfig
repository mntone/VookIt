root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,json}]
charset = utf-8
indent_style = tab

[package.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

[/node_modules/**]
charset = unset
end_of_line = unset
indent_style = unset
insert_final_newline = unset
