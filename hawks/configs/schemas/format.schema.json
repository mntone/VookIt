{
	"title": "Codec schema",
	"type": "object",
	"properties": {
		"type": {
			"title": "Media type",
			"type": "string",
			"enum": [
				"audio",
				"image",
				"video"
			]
		},
		"id": {
			"title": "Codec ID",
			"type": "number"
		},
		"idstr": {
			"title": "Readable Codec ID",
			"type": "string"
		},
		"enabled": {
			"title": "Enable Codec if True",
			"description": "Default is \"true\".",
			"type": "boolean",
			"default": true
		},
		"public": {
			"title": "Save on Public Directory if True",
			"type": "boolean",
			"default": false
		},
		"runsOn": {
			"title": "Runs on Queue Name",
			"type": "string",
			"default": "encode"
		},
		"uses": {
			"title": "Use Encoder if True",
			"type": "string",
			"enum": [
				"ffmpeg"
			],
			"default": "ffmpeg"
		},
		"ext": {
			"title": "Output File Extension",
			"type": "string",
			"enum": [
				".avif",
				".jpg",
				".jpeg",
				".m4a",
				".m4v",
				".mp3",
				".mp4",
				".opus",
				".webm",
				".webp"
			],
			"default": ".mp4"
		},
		"options": {
			"$ref": "#/$defs/options"
		},
		"tune": {
			"$ref": "#/$defs/tune"
		},
		"variants": {
			"title": "Variants",
			"type": "array",
			"minItems": 1,
			"items": {
				"title": "Variant",
				"type": "object",
				"properties": {
					"id": {
						"title": "Variant ID",
						"type": "number"
					},
					"idstr": {
						"title": "Readable Variant ID",
						"type": "string"
					},
					"enabled": {
						"title": "Enable Variant if True",
						"description": "Default is \"true\".",
						"type": "boolean",
						"default": true
					},
					"runsOn": {
						"title": "Runs on Queue Name",
						"type": "string",
						"default": "encode"
					},
					"bitrate": {
						"title": "Bitrate",
						"type": ["string", "number"],
						"pattern": "^([0-9]*\\.)?[0-9]+([kKmMgGtTpPeE])?$",
						"minimum": 0,
						"default": "1M"
					},
					"constraints": {
						"$ref": "constraints.schema.json#/$defs/root"
					},
					"filename": {
						"title": "Filename",
						"description": "Default is \"[idstr][ext]\"."
					},
					"options": {
						"$ref": "#/$defs/options"
					},
					"tune": {
						"$ref": "#/$defs/tune"
					}
				},
				"required": [
					"id",
					"idstr"
				]
			}
		}
	},
	"required": [
		"id",
		"idstr",
		"type",
		"use",
		"ext",
		"enabled"
	],
	"$defs": {
		"options": {
			"title": "Encoder Options",
			"type": "object",
			"properties": {
				"codec": {
					"title": "Codec",
					"description": "\"vcodec\" in Video, \"acodec\" in Audio.",
					"type": "string",
					"enum": [
						"libx264",
						"libx265",
						"libvpx",
						"libvpx-vp9",
						"libaom-av1",

						"libmp3lame",
						"aac",
						"aac_at",
						"libopus"
					]
				},
				"pixelFormat": {
					"title": "Pixel Format",
					"type": "string",
					"enum": [
						"default",
						"yuv420p",
						"yuv420p10le"
					],
					"default": "yuv420p"
				},
				"maxWidth": {
					"title": "Maximum Width",
					"type": "number",
					"minimum": 1,
					"maximum": 99999,
					"default": 1280
				},
				"maxHeight": {
					"title": "Maximum Height",
					"type": "number",
					"minimum": 1,
					"maximum": 9999,
					"default": 720
				},
				"maxSize": {
					"title": "Maximum Resolution",
					"type": "string",
					"pattern": "^[1-9][0-9]{0,4}x[1-9][0-9]{0,3}$",
					"default": "1920x1080"
				},
				"maxFramerate": {
					"title": "Maximum Framerate",
					"description": "For example, 30 (\"number\"), \"30000/1001\" (\"string\") or `{ numerator: 30000, denominator: 1001 }` (\"object\")",
					"default": 30,
					"anyOf": [
						{
							"type": "number",
							"minimum": 0,
							"default": 30
						},
						{
							"type": "string",
							"pattern": "^[1-9][0-9]*/[1-9][0-9]*$",
							"default": "30000/1001"
						},
						{
							"type": "object",
							"properties": {
								"numerator": {
									"type": "number",
									"minimum": 1,
									"default": 30000
								},
								"denominator": {
									"type": "number",
									"minimum": 1,
									"default": 1001
								}
							},
							"required": [
								"numerator",
								"denominator"
							]
						}
					]
				}
			},
			"additionalProperties": true
		},
		"tune": {
			"title": "Tune",
			"type": "object",
			"properties": {
				"bpp": {
					"title": "Bits per Pixel",
					"description": "Default is \"0.11\" (H.264/AVC) and \"0.055\" (AV1).",
					"type": "number",
					"default": 0.11
				},
				"increase": {
					"title": "Increasing Multiplier to Bitrate for Pixel Ratio Relative to 16:9 (Video) or Channels Relative to Stereo (Audio).",
					"type": "number",
					"default": 1.0
				},
				"decrease": {
					"title": "Increasing Multiplier to Bitrate for Pixel Ratio Relative to 16:9 (Video) or Channels Relative to Stereo (Audio).",
					"type": "number",
					"default": 1.0
				}
			}
		}
	}
}